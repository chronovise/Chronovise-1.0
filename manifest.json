{

  "manifest_version": 2,

  "name": "Chronovise",

  "version": "0.0.2",

  "description": "Let us do the work",

  "permissions": ["storage","tabs","<all_urls>"],

  "background":{
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "js": ["popup.js"],

      "matches":[
        "<all_urls>"
      ]
    }
  ],

  "icons":{
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },

  "browser_action": {
    "default_title": "",
    "default_popup": "popup.html",
    "default_title": "Chronovise",
    "default_icon": "icon_16.png"
  }

}
